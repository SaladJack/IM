<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/send_time"
        android:padding="4dp"
        android:layout_gravity="center"
        android:textColor="@android:color/white"
        android:text="10:21"
        android:visibility="visible"
        android:background="@drawable/time_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/send_img"
            android:src="@drawable/avatar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/send_content"
            android:background="@drawable/chat_content_bg"
            style="@style/normal_item_padding"
            android:textColor="@android:color/white"
            android:text="dsasdsadasdasdasdasdasdsadasdasdasdasdasdasdasdasdasdas"
            android:maxWidth="250dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/send_img" />
    </RelativeLayout>
</LinearLayout>